<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <title>INDEX</title>

    <link rel="stylesheet" href="/index.css">
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Title</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/"> Blog <span class="sr-only">(current)</span></a>
            </li>
          </ul>

          <% if(verified) { %>
            <!-- If the user logged in -->

            <ul class="nav justify-content-end">
              <li class="nav-item active">
                <a class="nav-link" style="color: white" href="/new"> Create <span class="sr-only">(current)</span></a>
              </li>
            </ul>

            <ul class="nav justify-content-end">
              <li class="nav-item active">
                <a class="nav-link" style="color: white" href="/logout"> Logout <span class="sr-only">(current)</span></a>
              </li>
            </ul>

          <% } else { %>
            <!-- else -->
            <ul class="nav justify-content-end">
              <li class="nav-item active">
                <a class="nav-link" style="color: white" href="/login"> Login <span class="sr-only">(current)</span></a>
              </li>
            </ul>

          <% } %>

        </div>
      </nav>

      <center>
      <!-- Posts work backwards that means that the posts are reversed -->
    <% posts.slice().reverse().forEach((post) => { %>
        
        
        
        <!-- <%= post.id %> -->

        <div class="simple-space col-sm-6">
            <div class="card">
              <div class="card-body">
                <h4><span class="badge badge-dark"><%= post.id %></span> <%= Truncate(post.title, 50)%></h4>
                <p class="date"> <%= post.post_date %></p>
                <p class="card-text"><%= Truncate(post.content, 200) %></p>
                <a href="/post/<%= post.id %>" class="btn btn-dark">Read</a>
                
                
                <% if(verified) { %>

                  <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Actions
                    </button>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="/edit/<%= post.id %>">Edit</a>
                      <a class="dropdown-item" href="/delete/<%= post.id %>">Delete</a>
                    </div>
                  </div>
                <% } %>


              </div>
            </div>
        </div>

    <% }); %>

    </center>
</body>
</html>